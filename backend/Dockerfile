FROM python:3.10-slim

RUN apt-get update && apt-get install -y 
gcc 
g++ 
libffi-dev 
python3-dev 
libssl-dev 
build-essential 
&& rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 8000

CMD uvicorn main:app --host 0.0.0.0 --port $PORT